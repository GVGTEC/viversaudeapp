<h1>Or√ßamentos</h1>

<div class="page-header">
  <%= link_to new_orcamento_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h2>Lista</h2>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Cliente</th>
            <th>Vendedor</th>
            <th>Data emissao</th>
            <th>Valor total</th>
            <th>Observacao</th>
            <th>Flag</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @orcamentos) do |orcamento| %>
            <td><%= orcamento.cliente %></td>
            <td><%= orcamento.vendedor %></td>
            <td><%= orcamento.data_emissao %></td>
            <td><%= orcamento.valor_total %></td>
            <td><%= orcamento.observacao %></td>
            <td><%= orcamento.flag %></td>
            <td><%= link_to 'Mostrar', orcamento %></td>
        <td><%= link_to 'Editar', edit_orcamento_path(orcamento) %></td>
        <td><%= link_to 'Apagar', orcamento, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
