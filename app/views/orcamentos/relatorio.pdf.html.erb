<!DOCTYPE html>
<html>
  <head>
    <title>Viver Saúde PDF</title>
    <meta charset="utf-8">

    <style="font-family: arial; font-size: 20px">

  </head> 

  <body>
    <p>
      <h2 style="text-align: center;">ORÇAMENTO Nº <%= @orcamento.id %> </h2>
    </p>

    <!--
    <p>
      <strong>ORÇAMENTO Nº </strong>
      <%= @orcamento.id %>
    </p>
    -->

    <hr>

    <table>
      <tr>
        <td>Cliente:  </td>
        <td><%= @cliente.nome %></td>
      </tr>

      <tr>
        <td>Endereço:  </td>
        <td style="width: 900px;"><%= @cliente.endereco %></td>
      </tr>
    </table>

    <hr>
  
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Código</th>
            <th style="width: 500px;">Descrição</th>
            <th>Qtde</th>
            <th>Preço</th>
            <th>Total</th>
          </tr>
        </thead>

        <tbody style="font-size:10px;">
            <%= content_tag_for(:tr, @orcamento_itens) do |orc| %>
            <td><%= orc.produto.id %></td>
            <td style="width: 500px; font-size:10px;"><%= orc.produto.descricao %></td>
            <td><%= orc.quantidade %></td>
            <td ><%= orc.preco_unitario %></td>
            <td ><%= '%.2f' % orc.preco_total %></td>
          <% end %>
        </tbody>

        <tbody id="tableBody_orcamento_id_<%= @orcamento.id %>">
          <% @orcamento.orcamento_itens.each_with_index do |orc_item, index| %>
            <tr>
              <td><%= orc_item.produto.id %></td>
              <td><%= orc_item.produto.descricao %></td>
              <td><%= orc_item.quantidade %></td>
              <td><%= orc_item.preco_unitario %></td>
              <td><%= orc_item.preco_total %></td>
            </tr>
          <% end %>
        </tbody>

        <table>
          <hr>

          <tr>
            <p style="text-align: end;"><b>Valor Total:<b> <% @orcamento.total%></p>
            <p class="valor-total" style="font-size: 60px"></p>
          </tr>   
        </table>        

      </table>
    </div>
  </body>
</html>

<style type="text/css">
table {
      border-collapse: colapse;
      margin-botton: 1cm
      width: 100%
    }

    table if {
      page-break-inside: avoid;
    }

    table tbodytr th {
      border: 1px solid #000000;
      min-width: 0.6px;
      padding: 5cm;
      text-align: center;
      vertical-align: top;
      font-size: 10;
    }            

</style>
