<div class="page-header">
  <%= link_to orcamentos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_orcamento_path(@orcamento), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h2>Mostrar</h2>
</div>

<dl class="dl-horizontal">
  <dt>Cliente:</dt>
  <dd><%= @orcamento.cliente.nome %></dd>
  <dt>Vendedor:</dt>
  <dd><%= @orcamento.vendedor.nome %></dd>
  <dt>Data emissao:</dt>
  <dd><%= @orcamento.data_emissao %></dd>
  <dt>Valor total:</dt>
  <dd><%= @orcamento.valor_total %></dd>
  <dt>Observacao:</dt>
  <dd><%= @orcamento.observacao %></dd>
  <dt>Flag:</dt>
  <dd><%= @orcamento.flag %></dd>
</dl>
