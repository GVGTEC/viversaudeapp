<style>
  a{color: #333333;}
</style>

<div class="page-header"> 
  <a class="btn btn-primary" href="javascript:window.location.assign('/nota_fiscais/<%= @nota_fiscal.id %>/nota_fiscal_itens/new')">
    <span class="glyphicon glyphicon-plus"></span>
    Atualizar
  </a>
  <%= link_to nota_fiscais_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <h2>Itens</h2>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nota Fiscal</th>
        <th>Código</th>
        <th>Descrição</th>
        <th>CFOP</th>
        <th>NCM</th>
        <th>Un</th>
        <th>Qtde</th>
        <th>Preço Unitário</th>
        <th>Preço Total</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @nota_fiscal_itens) do |nota_fiscal_item| %>
        <td><%= nota_fiscal_item.nota_fiscal.numero_nota %></td>
        <td><%= nota_fiscal_item.produto.id %></td>
        <td><%= link_to "#{nota_fiscal_item.descricao}", produtos_path(codigo: nota_fiscal_item.produto.id) %></td>
        <td><%= nota_fiscal_item.cfop %></td>
        <td><%= nota_fiscal_item.ncm %></td>
        <td><%= nota_fiscal_item.unidade %></td>
        <td><%= formatar_qtd(nota_fiscal_item.quantidade) %></td>
        <td style="text-align: end;"><%= number_to_currency(nota_fiscal_item.preco_unitario) %></td>
        <td style="text-align: end;"><%= number_to_currency(nota_fiscal_item.preco_total) %></td>
      <% end %>
    </tbody>
  </table>
</div>
