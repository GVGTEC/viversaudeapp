<h2>Plano de Contas</h2>

<div class="page-header">
  <%= link_to new_plano_conta_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h2>Lista</h2>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Conta</th>
            <th>Descrição</th>
            <th>Grau</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @plano_contas) do |plano_conta| %>
            <td><%= plano_conta.conta %></td>
            <td><%= plano_conta.descricao %></td>
            <td><%= plano_conta.grau %></td>
            <td><%= link_to 'Mostrar', plano_conta %></td>
        <td><%= link_to 'Editar', edit_plano_conta_path(plano_conta) %></td>
        <td><%= link_to 'Apagar', plano_conta, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>

  <div class="apple_pagination">
    <%= will_paginate @plano_contas, :container => false %>
  </div>    
</div>
