<div class="page-header">
  <%= link_to orcamento_itens_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_orcamento_item_path(@orcamento_item), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h2>Mostrar</h2>
</div>

<dl class="dl-horizontal">
  <dt>Orcamento:</dt>
  <dd><%= @orcamento_item.orcamento %></dd>
  <dt>Produto:</dt>
  <dd><%= @orcamento_item.produto %></dd>
  <dt>Quantidade:</dt>
  <dd><%= @orcamento_item.quantidade %></dd>
  <dt>Preco unitario:</dt>
  <dd><%= @orcamento_item.preco_unitario %></dd>
  <dt>Preco total:</dt>
  <dd><%= @orcamento_item.preco_total %></dd>
</dl>
