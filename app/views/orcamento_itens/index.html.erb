<style>
  a{color: #333333;}
</style>

<div class="page-header"> 
  <a class="btn btn-primary" href="javascript:window.location.assign('/orcamentos/<%= @orcamento.id %>/orcamento_itens/new')">
    <span class="glyphicon glyphicon-plus"></span>
    Atualizar
  </a>
  <%= link_to orcamentos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %> 
  <h3>Orçamento Nº <%= @orcamento.id %></h3>
  <h3>Itens</h3> 
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Qtde</th>
        <th>Preço Unitário</th>
        <th>Preço Total</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @orcamento_itens) do |orcamento_item| %>
        <td><%= orcamento_item.produto.id %></td>
        <td><%= orcamento_item.produto.descricao %></td>
        <td><%= formatar_qtd(orcamento_item.quantidade) %></td>
        <td style="text-align: end;"><%= number_to_currency(orcamento_item.preco_unitario) %></td>
        <td style="text-align: end;"><%= number_to_currency(orcamento_item.preco_total) %></td>
      <% end %>
    </tbody>
  </table>
</div>
