<h2><%=params[:controller].capitalize %></h2>

<div class="page-header">
  <%= link_to new_terceiro_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h2>Lista</h2>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @terceiros) do |terceiro| %>
            <td><%= terceiro.nome %></td>
            <td><%= terceiro.telefone %></td>
            <td><%= terceiro.email %></td>
            <td><%= link_to 'Mostrar', terceiro %></td>
        <td><%= link_to 'Editar', edit_terceiro_path(terceiro) %></td>
        <td><%= link_to 'Apagar', terceiro, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
