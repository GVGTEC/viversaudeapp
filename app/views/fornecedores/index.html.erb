<h2>Fornecedores</h2>

<div class="page-header">
  <%= link_to "javascript:window.location.assign('/fornecedores/new')", class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h2>Lista</h2>
</div>

<div style="text-align: right; margin-top:10px; margin-bottom: 15px;">
  <form action="/fornecedores" method="get">
    <div class="row" style="width:300px;display: inline-block;">
      <div style="float: left">
        <input type="text" name="nome" value="<%=params[:nome] %>" class="form-control" placeholder="Busca..">
      </div>
      <div style="float: left;margin-left:5px">
        <input type="submit" class="btn btn-primary" value="Buscar">
      </div>
    </div>
  </form>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome/Razão Social</th>
        <th>Endereço</th>
        <th>Bairro</th>
        <th>Cidade</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @fornecedores) do |fornecedor| %>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.endereco %></td>
        <td><%= fornecedor.bairro %></td>
        <td><%= fornecedor.cidade %></td>
        <td><%= link_to 'Mostrar', fornecedor %></td>
        <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Apagar', fornecedor, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>

  <div class="apple_pagination">
    <%= will_paginate @fornecedores, :container => false %>
  </div>    
</div>
