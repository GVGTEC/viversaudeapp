<h2>Localização Estoque</h2>

<div class="page-header">
  <%= link_to new_localizacao_estoque_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h3>Lista</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Id</th>
            <th>Local</th>
            <th>Observação</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @localizacao_estoques) do |localizacao_estoque| %>
            <td><%= localizacao_estoque.id %></td>
            <td><%= localizacao_estoque.local %></td>
            <td><%= localizacao_estoque.observacao %></td>
            <td><%= link_to 'Mostrar', localizacao_estoque %></td>
        <td><%= link_to 'Editar', edit_localizacao_estoque_path(localizacao_estoque) %></td>
        <td><%= link_to 'Apagar', localizacao_estoque, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>

  <div class="apple_pagination">
    <%= will_paginate @localizacao_estoques, :container => false %>
  </div>    
</div>
